{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://auvima.io/schemas/knowledge_document.schema.json",
  "title": "KnowledgeDocument",
  "description": "配方的配套Markdown知识文档（6个标准章节）",
  "type": "object",
  "properties": {
    "recipe_name": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "关联的配方名称"
    },
    "sections": {
      "type": "object",
      "description": "6个标准章节内容",
      "properties": {
        "功能描述": {
          "type": "string",
          "description": "配方功能说明（1-2段）"
        },
        "使用方法": {
          "type": "string",
          "description": "完整的使用示例（包含命令行）"
        },
        "前置条件": {
          "type": "string",
          "description": "执行配方前需要满足的条件（checklist格式）"
        },
        "预期输出": {
          "type": "string",
          "description": "数据格式和示例（JSON格式）"
        },
        "注意事项": {
          "type": "string",
          "description": "脆弱选择器、已知限制等警告信息"
        },
        "更新历史": {
          "type": "string",
          "description": "版本更新记录（按时间倒序）"
        }
      },
      "required": ["功能描述", "使用方法", "前置条件", "预期输出", "注意事项", "更新历史"],
      "additionalProperties": false
    },
    "update_history": {
      "type": "array",
      "description": "更新历史记录（结构化数据）",
      "items": {
        "$ref": "update_record.schema.json"
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "文档创建时间（ISO 8601格式）"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "最后更新时间（ISO 8601格式）"
    }
  },
  "required": ["recipe_name", "sections", "update_history", "created_at", "last_updated"],
  "additionalProperties": false
}
