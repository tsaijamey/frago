{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://auvima.io/schemas/exploration_step.schema.json",
  "title": "ExplorationStep",
  "description": "探索会话中的单个操作步骤",
  "type": "object",
  "properties": {
    "step_number": {
      "type": "integer",
      "minimum": 1,
      "description": "步骤序号（从1开始）"
    },
    "action": {
      "type": "string",
      "enum": ["navigate", "click", "extract", "wait", "scroll", "input", "screenshot"],
      "description": "操作类型"
    },
    "target_selector": {
      "$ref": "selector.schema.json",
      "description": "目标元素选择器（可选，某些操作不需要）"
    },
    "parameters": {
      "type": "object",
      "description": "操作参数（根据action类型动态）",
      "additionalProperties": true,
      "examples": [
        {"url": "https://youtube.com", "timeout": 5000},
        {"text": "search query"},
        {"direction": "down", "pixels": 500}
      ]
    },
    "screenshot_path": {
      "type": "string",
      "format": "uri-reference",
      "description": "截图路径（可选）"
    },
    "result": {
      "type": "string",
      "description": "步骤执行结果（可选）",
      "examples": ["成功点击按钮", "元素未找到"]
    },
    "user_confirmed": {
      "type": "boolean",
      "description": "用户是否确认此步骤",
      "default": false
    }
  },
  "required": ["step_number", "action", "user_confirmed"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "action": {
            "const": "navigate"
          }
        }
      },
      "then": {
        "properties": {
          "parameters": {
            "required": ["url"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "enum": ["click", "extract"]
          }
        }
      },
      "then": {
        "required": ["target_selector"]
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "wait"
          }
        }
      },
      "then": {
        "properties": {
          "parameters": {
            "anyOf": [
              {"required": ["timeout"]},
              {"required": ["selector"]}
            ]
          }
        }
      }
    }
  ]
}
