{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://auvima.io/schemas/update_record.schema.json",
  "title": "UpdateRecord",
  "description": "配方更新历史的单条记录",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "更新日期（ISO 8601格式）"
    },
    "reason": {
      "type": "string",
      "description": "更新原因",
      "examples": ["YouTube改版导致字幕按钮选择器失效", "初始版本"]
    },
    "changes": {
      "type": "string",
      "description": "主要变更内容",
      "examples": ["更新按钮选择器从 `.old-selector` 改为 `.new-selector`", "创建配方脚本"]
    },
    "tested_on": {
      "type": "string",
      "description": "测试环境说明（可选）",
      "examples": ["Chrome 120, YouTube 2025-11版本"]
    }
  },
  "required": ["date", "reason", "changes"],
  "additionalProperties": false
}
